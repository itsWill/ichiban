<div class="kanban-item" draggable="true" ondragstart="drag(event)" id=<%=item.id%>>
  <div class="panel panel-primary" nodrop="true">
    <div class="panel-heading" nodrop="true">
      <h3 class="panel-title" nodrop="true"><%= item.title %></h3>
    </div>
    <div class="panel-body" nodrop="true">
      <%= markdown(item.description) %>
    </div>
    <div class="panel-footer" nodrop="true">
      <%= link_to "delete", [current_user, item], remote: true, method: :delete %>
      <%= link_to "edit", edit_user_todo_path(current_user, item) %>
    </div>
  </div>
</div>